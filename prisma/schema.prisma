generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI") // ใช้ ENV สำหรับ URI ของ MongoDB
}

model User {
  id       String  @id @default(cuid()) @map("_id") // Maps to MongoDB _id
  name     String
  email    String  @unique
  password String?
  posts    Post[]  // One User can have many Posts
  comments Comment[] // เพิ่มการเชื่อมโยงกับความคิดเห็น
}

model Post {
  id       String   @id @default(cuid()) @map("_id") // MongoDB _id
  title    String
  content  String
  userId   String   // ฟิลด์ที่ใช้ระบุผู้ใช้ที่โพสต์
  user     User     @relation(fields: [userId], references: [id]) // การเชื่อมโยงกับ User
  images    String[] // รองรับหลายภาพ
  createdAt DateTime @default(now()) // วันที่สร้างโพสต์
  updatedAt DateTime @updatedAt  // วันที่ปรับปรุงโพสต์ล่าสุด
  comments Comment[] // ความคิดเห็นที่เกี่ยวข้องกับโพสต์
}

model Comment {
  id       String   @id @default(cuid()) @map("_id") // MongoDB _id
  content  String   // เนื้อหาของความคิดเห็น
  postId   String   // ID ของโพสต์ที่ความคิดเห็นนี้เกี่ยวข้อง
  post     Post     @relation(fields: [postId], references: [id]) // เชื่อมโยงกับ Post
  userId   String   // ID ของผู้ใช้ที่ทำความคิดเห็น
  user     User     @relation(fields: [userId], references: [id]) // เชื่อมโยงกับ User
  createdAt DateTime @default(now()) // วันที่สร้างความคิดเห็น
}